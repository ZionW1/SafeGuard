<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.safeg.user.mapper.NoticeMapper">

    <select id="noticeList" resultType="AdminContentVO">
        <![CDATA[
        SELECT 
            Admin_Content_id,
            title,
            content,
            content_type,
            author,
            created_at,
            updated_at
        FROM 
            Admin_Content
        where
        ]]>
        <!-- <if test="option.code == 0">
            (title like CONCAT('%', #{option.keyword}, '%')
            or content like CONCAT('%', #{option.keyword}, '%')
            or content_type like CONCAT('%', #{option.keyword}, '%'))
        </if>
        <if test="option.code == 1">
            title like CONCAT('%', #{option.keyword}, '%')
        </if>
        <if test="option.code == 2">
            content like CONCAT('%', #{option.keyword}, '%')
        </if>
        <if test="option.code == 3">
            content_type like CONCAT('%', #{option.keyword}, '%')
        </if> -->
        content_type='NOTICE'
        and is_active = 'Y'
        <!-- <if test="option.orderCode == 0">
            order by AdminContent_id desc
        </if> -->
        order by Admin_Content_id desc
    </select>

    <select id="noticeSelect" resultType="AdminContentVO">
        SELECT 
            Admin_Content_id,
            title,
            content,
            content_type,
            author,
            created_at,
            updated_at
        FROM 
            Admin_Content
        where
            is_active = 'Y'
            and content_type='NOTICE'
            and Admin_Content_id = #{id}
    </select>
</mapper>